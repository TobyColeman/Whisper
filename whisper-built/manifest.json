{
	"manifest_version": 2,
	"name": "__MSG_extNAME__",
	"version": "1.0.0",
	"author": "Toby Coleman",

	"default_locale": "en",
	"description": "__MSG_extDescription__",

	"icons": {
		"16": "images/locked.png",
		"48": "images/locked.png",
	   "128": "images/locked.png"
	},

	"page_action": {
		"default_icon": {
			"38": "images/lock-grey.png"
		},
		"default_title": "Whisper"
	},

	"options_page": "options.html",

	"permissions": [
		"webRequest",
		"tabs",
		"storage",
		"unlimitedStorage",
		"https://*.messenger.com/*"
	],

	"externally_connectable": {
		"matches": ["https://*.messenger.com/*"]
	},

	"content_scripts": [
		{
			"matches": ["https://*.messenger.com/*"],
			"css": ["css/facebook-messages.css", "css/messenger.css", "css/ionicons.css"],
			"js" : ["js/injector.js", "js/messenger-main.js"],
			"run_at": "document_start"
		}
	],

	"background": {
		"scripts": ["js/background.js"],
		"persistent": true
	},

	"web_accessible_resources": [
		"fonts/*.*", 
		"js/ajaxProxy.js",
		"js/fb-overrides.js",
		"images/unlocked.png"
	]	
}